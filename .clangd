Diagnostics:
  ClangTidy:
    FastCheckFilter: None
    Add: [modernize*,readability-*]
    CheckOptions:
      modernize-avoid-c-arrays:                                   1
      modernize-use-trailing-return-type                          1
      readability-braces-around-statements:                       1
      readability-identifier-naming.LocalVariableCase:            camelBack
      readability-identifier-naming.ClassCase:                    CamelCase
      readability-identifier-naming.ClassMemberCase:              camelBack
      readability-identifier-naming.MemberCase:                   camelBack
      readability-identifier-naming.MemberPrefix:                 "m_"
      readability-identifier-naming.MethodCase:                   camelBack
      readability-identifier-length.MinimumVariableNameLength:    4
      readability-else-after-return:                              1


